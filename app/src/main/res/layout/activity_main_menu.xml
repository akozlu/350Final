<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fahim.hupproject.MainMenuActivity">

    <ImageButton
        android:id="@+id/Camera"
        android:background="@drawable/camera"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onCameraClick"/>
    <ImageButton
        android:id="@+id/Survey"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/survey"
        android:layout_centerHorizontal="true"
        android:text="Survey"
        android:onClick="onSurveyClick"/>
    <ImageButton
        android:id="@+id/FAQ"
        android:background="@drawable/faq"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onFAQClick"/>
    <TextView
        android:id="@+id/FAQText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FAQ"
        android:text="FAQ"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"/>
    <TextView
        android:id="@+id/CameraText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Camera"
        android:layout_marginLeft="30dp"
        android:text="Camera"/>
    <TextView
        android:id="@+id/SurveyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Survey"
        android:layout_centerHorizontal="true"
        android:text="Survey"/>


    <Button
    android:id="@+id/logout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_alignParentBottom="true"
    android:text="@string/LogoutBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONCERN"
        android:id="@+id/concernButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onConcernClick" />


</RelativeLayout>
